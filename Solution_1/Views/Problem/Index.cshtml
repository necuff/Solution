@model IEnumerable<Problem>

<h3 class="p-2 bg-primary text-white text-center">Problems</h3>    

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col fw-bold">Id</div>
        <div class="col fw-bold">Name</div>
        <div class="col fw-bold">Solution</div>
        <div class="col fw-bold">Finish Date</div>
        <div class="col fw-bold">Description</div>
        <div class="col fw-bold">Email</div>
        <div class="col"></div>
    </div>    
    <div>
        @if (Model.Count() == 0)
        {
            <div class="row">
                <div class="col text-center p-2">No data</div>
            </div>
        }
        else
        {
            @foreach (Problem p in Model)
            {
                <div class="row p-2">
                    <div class="col-1">@p.Id</div>
                    <div class="col">@p.Name</div>
                    <div class="col">@p.Solution.Name</div>
                    <div class="col">@p.FinishDate</div>
                    <div class="col">@p.Description</div>
                    <div class="col">@p.Email</div>
                    <div class="col">
                        <form asp-action="DeleteProblem" method="post">
                            <a asp-action="UpdateProblem" asp-route-id="@p.Id"
                               class="btn btn-outline-primary">Edit</a>
                            <input type="hidden" name="Id" value="@p.Id" />
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>                        
                    </div>
                </div>
            }
            
        }
        <div class="text-center p-2">
            <a asp-action="UpdateProblem" asp-route-id="0" class="btn btn-primary">Add</a>
        </div>
    </div>    
</div>